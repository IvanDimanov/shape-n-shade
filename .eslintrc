{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app",
    "google"
  ],

  "ignorePatterns": [
    "artifacts/",
    "build/",
    "node_modules/",
    "test/polyfills/",
    "storybook-static/",
    "src/utils/jsm/",
    "src/serviceWorker.js"
  ],

  "rules": {
    "no-invalid-this": 0,
    "max-len": [
      2,
      130,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false
      }
    ],
    "require-atomic-updates": 0,
    "no-extra-semi": 0,
    "comma-dangle": ["error", "only-multiline"],
    "indent": 0,
    "arrow-parens": ["error", "as-needed"],
    "semi": ["error", "never", {"beforeStatementContinuationChars": "always"}],
    "operator-linebreak": [
      "error",
      "after",
      {"overrides": {"?": "before", ":": "before"}}
    ],
    "quote-props": 0
  }
}
